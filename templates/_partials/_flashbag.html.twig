{% for label, message in app.flashes %}
	<section
		class="container">
		{# Flashbag labels have the same names of the bootstrap alert classes. #}
		<div class="alert alert-{{ label }} alert-dismissible fade show text-center h5 my-4" role="alert">
			{% for message in messages %}
				{# we display different icon relative to the label. #}
				<p class="text-center font-weigt-bold">
					{{ message|raw }}
					{% if label is same as("success") %}&#x1F44D;{% elseif label is same as("danger") %}&#x1F6A7;
					{% endif %}
				</p>
			{% endfor %}
			<button type="button" class="close" data-dismiss="alert" aria-label="close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</section>
{% endfor %}
