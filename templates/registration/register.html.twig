{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}


	<h1>Inscription</h1>
	<div class="formInsciption">
		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.pseudo) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.civilite) }}

		<div class="d-flex justify-content-center">
			<div class="col prenom">{{ form_row(registrationForm.prenom) }}</div>
			<div class="col">{{ form_row(registrationForm.nom) }}</div>
		</div>

		<div class="d-flex justify-content-center">
			<div class="col champform">{{ form_row(registrationForm.code_postal) }}</div>
			<div class="col">{{ form_row(registrationForm.ville) }}</div>
		</div>
		{{ form_row(registrationForm.adresse) }}


		{{ form_row(registrationForm.agreeTerms) }}

		{{ form_end(registrationForm) }}
	</div>

{% endblock %}
